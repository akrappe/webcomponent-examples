{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "noImplicitAny": true,
    "outFile": "dist/custom-component.js",
    "pretty": true,
    "removeComments": true,
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "ES6",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}