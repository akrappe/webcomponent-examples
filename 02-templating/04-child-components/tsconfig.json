{
  "compilerOptions": {
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "pretty": true,
    "removeComments": true,
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es6",
    "typeRoots": []
  },
  "include": [
    "src/**/*.js"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}